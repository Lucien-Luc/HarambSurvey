rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Survey collection - allow public read, authenticated write
    match /surveys/{surveyId} {
      // Anyone can read surveys (for public survey access)
      allow read: if true;
      
      // Only authorized admins can create/update surveys
      allow write: if request.auth != null && 
        request.auth.token.email in ['admin@bpn.com'];
    }
    
    // Responses collection - allow public write, authenticated read
    match /responses/{responseId} {
      // Anyone can submit survey responses (for public surveys)
      allow create: if true;
      
      // Only authorized admins can read all responses (for admin dashboard)
      allow read: if request.auth != null && 
        request.auth.token.email in ['admin@bpn.com'];
      
      // Only authorized admins can update/delete responses
      allow update, delete: if request.auth != null && 
        request.auth.token.email in ['admin@bpn.com'];
    }
    
    // Users collection - only authorized admins can access user data
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['admin@bpn.com'];
    }
    
    // Settings collection - only authorized admins can access settings
    match /settings/{document} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['admin@bpn.com'];
    }
    
    // Analytics collection - only authorized admins can access analytics
    match /analytics/{document} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['admin@bpn.com'];
    }
  }
}